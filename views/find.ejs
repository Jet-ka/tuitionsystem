      <div class=" navbar-expand" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% for (var i = 0; i < infos.length; i++) { %>
            <% if (i === 0) { %>
                <!-- Display the first user ID -->
                <a class="nav-link active" href="/page/<%= infos[0].user_id %>">Home</a>
            <% } else { %>
                <!-- Hide subsequent user IDs -->
                <a class="nav-link active" id="trick" style="display: none;" href="/page/<%= infos[i].user_id %>">Home</a>
            <% } %>
        <% } %>
        
        <a class="nav-link active" href="/">Logout</a>
          <a class="nav-link active" href="mailto:jetlinkarkha40@gmail.com">Contact us</a>
      
        </div>
      </div>
    </div>
