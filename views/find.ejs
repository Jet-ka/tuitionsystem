    <div class="main">
        <table>
            <tr>
              <th>No.</th>
              <th>Name</th>
            <th>Month</th>
            <th>Class</th>
            <th>Atttendance</th>
            <th>Status</th>
            <th>Amount</th>
            <th>Edit</th>
            </tr>
<!--all information about that -->
<%infos.forEach(function(info,num){%>
    <tr>
        <td><%=num+1%></td>
        <td><%=info.name%></td>
        <td><%=info.month %></td> 
        <td><%=info.cls %></td>
        <td><%=info.attendance %></td>
        <td><%=info.fees %></td>
        <td><%=info.amount%></td>
        <td><div class="edit">
            <form action="/findup/<%=info._id%>" method="get">
            <a href="/findup/<%=info._id%>"><i class="fa fa-edit" style="font-size:30px;color:green"></i></a>
            </form>
            <form action="/finddel/<%=info._id%>" method="post">
               <a href="/finddel/<%=info._id%>"> <i class="fa fa-trash" style="font-size:30px;color:red"></i></a>
            </form>
            </div>
        </td>
    </tr>
 <% })%>

        </table>
    
    </div>

