<body>
  <div class="headline">
    <h3>Test</h3>
  </div>
<div class="main">


 <form action="/result/num/<%=infos%>" method="post">
      <!--value meeans what subject -->
      
<input type="hidden" name="value" value="<%=value%>">
<!---
  <input type="hidden" name="id" value="<%=infos%>"> -->
      <!---->
      
      <div class="qone">
     <% sub.forEach(function(items,index){%>
      <p><%=index+1%>. <%=items.question%> </p>
   
      <ol>
       <%items.options.forEach(function(opt){%>

        <li>
        <input type="radio" name="<%=items.number%>" value="<%=opt%>"><%=opt%>
        </li>
        
      <%})%>
      <li>
        <input type="radio" name="<%=items.number%>" value="0">Don't Know
        </li>

    </ol>

    <%  }) %>
      
       </div>
<button type="submit" class="btn-primary">Submit</button>
    </form>

  </div>

</body>
